@model Userinfo


@{
    ViewData["Title"] = "Apply - MeetingDay";
    Layout = "_PrimaryTop";
}



<div class="card" style="width: 50%; left: 25%; top: 15px;">
    <div class="m-2">
        <h3 class="text-center  m-0"> Toplantı Katılım Formu </h3>
    </div>


    
    
        <div class="text-center text-danger list-unstyled" asp-validation-summary="All"></div>
    
    


    <form class="mx-5 my-3" method="post" asp-controller="home" asp-action="apply" novalidate>
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Ad Soyad</label>
            <input asp-for="Name" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Telnumber" class="form-label">Telefon</label>
            <input asp-for="Telnumber" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Eposta</label>
            <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
        </div>

        <div class="mb-3">
           <label asp-for="WillAttend" class="form-label" > Katılım Durumu</label>
            <select asp-for="WillAttend" class="form-select">
               <option value="false" >Hayır ,  Gelmiyorum</option>
               <option value="true" >Evet ,  Geliyorum</option>
               <option value="" selected>Seçiniz</option>
           </select>
        </div>


        <button type="submit" class="btn btn-primary">Kaydet</button>

        <a asp-controller="home" asp-action="Index" class="btn btn-outline-danger" > Geri Dön</a>

    </form>


</div>